@page
@model SUShirts.Pages.Admin.Reservations

<h2>Rezervace</h2>

<div class="accordion mb-4">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#pendingReservations">
                Nevyřízené rezervace
            </button>
        </h2>
        <div id="pendingReservations" class="accordion-collapse collapse show">
            <div class="accordion-body">
                <partial name="Partials/_ReservationListPartial" model="@Model.PendingReservations"/>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#finishedReservations">
                Vyřízené rezervace
            </button>
        </h2>
        <div id="finishedReservations" class="accordion-collapse collapse">
            <div class="accordion-body">
                <partial name="Partials/_ReservationListPartial" model="@Model.FinishedReservations"/>
            </div>
        </div>
    </div>
</div>


